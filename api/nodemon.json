{
  "watch": ["src"],
  "ext": "ts js",
  "ignore": [
    "./**/*spec.ts",
    "./**/*test.ts",
    "./**/__test*/*",
    "./**/__mock*/*"
  ],
  "env": {
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "exec": "node --inspect=0.0.0.0:9229 -r ts-node/register -r tsconfig-paths/register ./src/index.ts"
}
